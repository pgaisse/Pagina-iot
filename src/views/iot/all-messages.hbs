<div class="container" onload="cargargraf()";>
    <div class="row mt-4">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5>Búsqueda de mensajes</h5>
                </div>
                <div class="card-body">
                    <form action="/iot/all-messages" method="POST">
                         <div class="form-group">
                            <select class="browser-default custom-select form-control md-4 " name="topic">
                                <option selected="" disabled>Topic</option>
                                {{#each topicos}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                    
                            </select>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4 ">
                                Startin Date:<input type="datetime-local" name="date1" class="form-control" id="date1" value="2021-01-12T23:20">
                            </div>
                            <div class="col-md-4 ">
                                Ending Date<input type="datetime-local" class="form-control" name="date2" id="date2" value="2022-01-12T23:20">
                            </div>
                            <div class="col-md-2 ">
                                Min Value:<input type="number" class="form-control" min="0" max="1000" placeholder="Value Min" id="vmin" name="vmin">
                            </div>
                            <div class="col-md-2 ">
                                Max Value:<input type="number" class="form-control" min="0" max="1000" placeholder="Value Max" id="vmax" name="vmax">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                Buscar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <div class="row my-4 mx-auto" id="graf" >
        <div class="col-md-12 mx-auto" id="columna">
            <div class="card">
                <div class="card-body w-100 mx-auto">
                    <canvas id="chLine" height="100" ></canvas>
                     <div  class="chartgraf" id="sales-analytics" style="height: 300px;"></div>

                </div>
            </div>
        </div>
        
    </div>
   
<div class="row mt-4">        
    <div class="col md-4 mx-auto">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row align-items-start mb-2">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="btn-refresh" unchecked />
                        <label class="form-check-label" for="flexSwitchCheckChecked">Refrescar automáticamente</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                        <input onchange="cargargraf()" class="form-check-input" type="checkbox" id="btn-refresh3" unchecked />
                        <label class="form-check-label" for="flexSwitchCheckChecked">cargar</label>
                        </div>
                    </div>
                    <div class="col-md-1">
                        
                    </div>
                    <div class="col-md-7">                         
                        <div class="dropdown mx-auto">                            
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                           </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="?limit=10">10</a>
                                <a class="dropdown-item" href="?limit=50">50</a>
                                <a class="dropdown-item" href="?limit=100">100</a>
                            </div>
                            {{sensors.page}} - {{sensors.limit}} de {{sensors.totalDocs}}
                        </div>                        
                    </div>                    
                </div>
               
                

            

                <div class="card">
                    <div class="card-header">
                        <h5>Registers</h5>

                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table table-styling">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Topic</th>
                                        <th>Value</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    {{#each sensors.docs as |sensor|}}
                                    <tr>
                                        <th scope="row">{{@index}}</th>
                                        <td>{{sensor.topic}}</td>
                                        <td>{{sensor.value}}</td>
                                        <td>{{sensor.date}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
