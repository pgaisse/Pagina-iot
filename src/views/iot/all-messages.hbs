<div class="container">
    <div class="row mt-4">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h1>Búsqueda de mensajes</h1>
                </div>
                <div class="card-body">
                    <form action="/iot/all-messages" method="POST">
                       <!-- <div class="form-group">
                            <input type="text" name="server" class="form-control" placeholder="Server">
                        </div>-->
                         <div class="form-group">
                        <!--<input type="text" name="topic" class="form-control" placeholder="Topic">-->
                            <select class="browser-default custom-select form-control " name="topic">
                                {{sensors}}
                                <option selected="" disabled>Topic</option>
                                {{#each topicos}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                    
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 ">
                            <label for="date1" >Inicio</label>
                             <input type="datetime-local" name="date1" class="form-control" id="date1">
                             <label for="date2">Fin</label>
                             <input type="datetime-local" class="form-control" name="date2" id="date2">
                             
                        </div>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" min="0" max="1000" placeholder="Value Min" id="vmin" name="vmin">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" min="0" max="1000" placeholder="Value Max" id="vmax" name="vmax">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                Buscar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <div class="row my-4 mx-auto" id="graf" style="display: none;">
        <div class="col-md-12 mx-auto" id="columna">
            <div class="card">
                <div class="card-body w-100 mx-auto">
                    <canvas id="chLine" height="100" ></canvas>
                </div>
            </div>
        </div>
        
    </div>
   
<div class="row mt-4">        
    <div class="col md-4 mx-auto">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row align-items-start mb-2">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="btn-refresh" unchecked />
                        <label class="form-check-label" for="flexSwitchCheckChecked">Refrescar automáticamente</label>
                        </div>
                    </div>
                    <div class="col-md-1">
                
                    </div>
                    <div class="col-md-7">                         
                        <div class="dropdown mx-auto">                            
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                           </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="?limit=10">10</a>
                                <a class="dropdown-item" href="?limit=50">50</a>
                                <a class="dropdown-item" href="?limit=100">100</a>
                            </div>
                            {{sensors.page}} - {{sensors.limit}} de {{sensors.totalDocs}}
                        </div>                        
                    </div>                    
                </div>

                
                
                <table class="table table-dark table-hover">
                    <thead>
                        <tr align="center"><th scope="col">ID</th><th scope="col">Status</th><th scope="col">value</th><th scope="col">Topic</th><th scope="col">Fecha</th></tr>
                    </thead>
                    <tbody id="tbody">
                        {{sensor.docs._id}}
                        {{#each sensors.docs as |sensor|}}
                            <tr id="fila" align="center">        
                                <th>{{sensor._id}}</th><td>{{sensor.status}}</td><td>{{sensor.value}}</td><td>{{sensor.topic}}</td><td scope="row">{{sensor.date}}</td>
                            
                            </tr>                
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>